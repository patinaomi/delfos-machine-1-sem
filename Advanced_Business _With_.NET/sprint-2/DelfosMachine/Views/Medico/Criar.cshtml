@model DelfosMachine.Models.Medico

@{
    ViewData["Title"] = "Cadastrar Médico";
}

<h2>Cadastrar Médico</h2>

<form asp-action="Criar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Especialidade"></label>
        <input asp-for="Especialidade" class="form-control" />
    </div>
    <div class="form-group pt-2">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
        <a asp-controller="Home" asp-action="Hero" class="btn btn-secondary">Home</a>
        <a asp-controller="PaginaClinica" asp-action="Index" class="btn btn-warning">Voltar</a>
    </div>
</form>

