@model DelfosMachine.Models.Medico

@{
    ViewData["Title"] = "Editar Médico";
}

<h2>Editar Médico</h2>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id" /> <!-- Campo oculto para passar o ID do médico -->

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Especialidade"></label>
        <input asp-for="Especialidade" class="form-control" />
    </div>

    <div class="form-group pt-2">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-controller="Home" asp-action="Hero" class="btn btn-secondary">Home</a>
        <a asp-controller="Medico" asp-action="Index" class="btn btn-warning">Voltar</a>
    </div>
</form>
