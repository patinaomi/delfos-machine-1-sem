@model IEnumerable<DelfosMachine.Models.RotinaCuidadoCliente>

@{
    ViewData["Title"] = "Consultar Rotina";
}

<h2>Rotina de Cuidado</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>IdCliente</th>
            <th>Histórico Médico</th>
            <th>Frequência de Escovação</th>
            <th>Frequência de Fio Dental</th>
            <th>Frequência de Enxaguante</th>
            <th>Sintomas Atuais</th>
            <th>Hábitos Alimentares</th>
            <th>Frequência de Visitas ao Dentista</th>
            <th>Cuidados Específicos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdCliente</td>
                <td>@item.HistoricoMedico</td>
                <td>@item.FrequenciaEscovacao</td>
                <td>@item.FrequenciaFioDental</td>
                <td>@item.FrequenciaEnxaguante</td>
                <td>@item.SintomasAtuais</td>
                <td>@item.HabitosAlimentares</td>
                <td>@item.FrequenciaVisitasDentista</td>
                <td>@item.CuidadosEspecificos</td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group pt-3">
    <a asp-controller="DadosCadastrais" asp-action="Consultar" class="btn btn-warning">Dados cadastrais</a>
    <a asp-controller="RotinaCuidadoCliente" asp-action="Criar" class="btn btn-primary">Criar</a>
    <a asp-controller="Home" asp-action="Hero" class="btn btn-secondary bg-green">Home</a>
</div>