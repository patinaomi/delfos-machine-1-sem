@model IEnumerable<DelfosMachine.Models.Especialista>

<h2>Lista de Clientes</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Especialidade</th>
            <th>CRM</th>
            <th>Senha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Especialidade</td>
                <td>@cliente.CRM</td>
                <td>@cliente.Senha</td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group pt-3">
    <a asp-controller="Especialidade" asp-action="Criar" class="btn btn-warning">Voltar</a>
    <a asp-controller="DadosCadastrais" asp-action="Consultar" class="btn btn-primary">Criar</a>
    <a asp-controller="Home" asp-action="Hero" class="btn btn-secondary bg-green">Home</a>
</div>